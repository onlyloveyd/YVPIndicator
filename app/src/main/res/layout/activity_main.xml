<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <cn.onlyloveyd.yvpindicator.YVPRectangleIndicator
        android:id="@+id/yvprect_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f7ef04"
        app:y_indicator_color="#b9ea06"
        app:y_indicator_height="4dp"
        android:orientation="horizontal"/>
    <cn.onlyloveyd.yvpindicator.YVPDotIndicator
        android:id="@+id/yvpdot_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f7ef04"
        app:y_indicator_color="#b9ea06"
        app:y_indicator_radius="8dp"
        android:orientation="horizontal"/>
    <cn.onlyloveyd.yvpindicator.YVPTriangleIndicator
        android:id="@+id/yvptriangle_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f7ef04"
        app:y_indicator_color="#b9ea06"
        app:y_indicator_height="10dp"
        android:orientation="horizontal"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>